@model WebBase.Mvc.ViewModels.ResetPasswordViewModel

@{
    ViewBag.Title = "Reset Password";   
    var inputSize = new { @class = "span4" };  
}

<hgroup class="title" style="padding-left: 20px">
    <h3>@ViewBag.Title</h3>
</hgroup>

@using (Html.BeginForm("ResetPassword", "Account", null, FormMethod.Post, new { @class = "form-horizontal" })) 
{
    @Html.AntiForgeryToken()        
    <section style="padding: 20px;">        
        <div class="control-group">
            @Html.LabelFor(x => x.Username, new { @class="control-label" })            
            <div class="controls">
                @Html.HiddenFor(x => x.Username)
                <label>@Model.Username</label>                                
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(x => x.NewPassword, new { @class="control-label" })            
            <div class="controls">
                @Html.PasswordFor(x => x.NewPassword, inputSize)
                @Html.ValidationMessageFor(m => m.NewPassword)                
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(x => x.ConfirmPassword, new { @class="control-label" })            
            <div class="controls">
                @Html.PasswordFor(x => x.ConfirmPassword, inputSize)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)                
            </div>
        </div>
        
        <input type="submit" class="btn btn-primary" value="Submit"/>                            
    </section>
}

